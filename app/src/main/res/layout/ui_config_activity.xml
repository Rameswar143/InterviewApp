<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.app.vst.christapp.UIConfigActivity">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="75dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#E4E6E8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/btn_load"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="Load Data"
                    android:textColor="#EEE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/dr_button"/>
                <Button
                    android:id="@+id/btn_skip"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="Skip Config"
                    android:textColor="#EEE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/dr_button"/>
            </LinearLayout>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:weightSum="2"
                android:layout_margin="20dp"
                android:paddingTop="15dp">
                <RadioButton
                    android:id="@+id/rb_individual"
                    android:button="@drawable/dr_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:text=" Individual Process"
                    android:textColor="#555"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"/>
                <RadioButton
                    android:id="@+id/rb_group"
                    android:button="@drawable/dr_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:text=" Group Process"
                    android:textColor="#555"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"/>
            </RadioGroup>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#C0C4C8"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbl_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#D4D8DC"
                android:text="SELECTION PROCESS"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#555"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/btn_back"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#D4D8DC"
                android:text="BACK"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#385"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#C0C4C8"/>
        <ListView
            android:id="@+id/lvw_items"
            android:divider="#00FFFFFF"
            android:dividerHeight="0px"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#C0C4C8"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D0D4D8"
            android:padding="20dp">
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="CONTINUE"
                android:textColor="#EEE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/dr_button"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/pnl_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A0000000">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="10px">
            <RelativeLayout
                android:layout_width="300px"
                android:layout_height="380px"
                android:background="#ffffff"
                android:padding="6px">
                <LinearLayout
                    android:id="@+id/pnl_inputs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="200px"
                    android:orientation="vertical"
                    android:background="#f6f6f6"
                    android:padding="20px">

                    <Button
                        android:id="@+id/btn_load_from_file"
                        android:layout_width="match_parent"
                        android:layout_height="40px"
                        android:text="Load From File"
                        android:textColor="#EEE"
                        android:layout_marginBottom="10px"
                        android:background="@drawable/dr_button"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_gravity="center_horizontal"
                        android:background="#d0d0d0"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10px"
                        android:text="STUDENT DATA"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="18px"
                        android:textColor="#555"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please select date range and load the student details."
                        android:gravity="center"
                        android:textSize="14px"
                        android:textColor="#999"
                        android:layout_marginBottom="20px"/>
                    <EditText
                        android:editable="false"
                        android:id="@+id/txt_from_date"
                        android:layout_width="match_parent"
                        android:layout_height="40px"
                        android:padding="5px"
                        android:hint="Select start date"
                        android:gravity="center"
                        android:background="@drawable/dr_edittext"
                        android:textSize="15px"
                        android:layout_marginBottom="20px"/>
                    <EditText
                        android:editable="false"
                        android:id="@+id/txt_to_date"
                        android:layout_width="match_parent"
                        android:layout_height="40px"
                        android:padding="5px"
                        android:hint="Select end date"
                        android:gravity="center"
                        android:background="@drawable/dr_edittext"
                        android:textSize="15px"
                        android:layout_marginBottom="30px"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <Button
                            android:id="@+id/btn_load_info"
                            android:layout_width="0px"
                            android:layout_height="40px"
                            android:layout_weight="1"
                            android:text="Load"
                            android:textColor="#EEE"
                            android:layout_marginRight="5px"
                            android:background="@drawable/dr_button"/>
                        <Button
                            android:id="@+id/btn_skip_info"
                            android:layout_width="0px"
                            android:layout_height="40px"
                            android:layout_weight="1"
                            android:text="Skip"
                            android:textColor="#EEE"
                            android:layout_marginLeft="5px"
                            android:background="@drawable/dr_button"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:clickable="false"
                    android:id="@+id/pnl_waiting_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F2f3f4"
                    android:layout_margin="5px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true">
                        <ProgressBar
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                            android:layout_gravity="center" />
                        <TextView
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="24px"
                            android:padding="10px"
                            android:gravity="center"
                            android:textColor="#333"
                            android:text="Please wait..."/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
