<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:local="utils"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.vst.christapp.UISingleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/pnl_scoresheets"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#D0D5D9">
            <TextView
                android:id="@+id/lbl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="SCORE SHEET (COURSE)"
                android:textColor="#234"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/img_nav"
                android:scaleType="centerInside"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#C0C5C9"/>
        <ScrollView
            android:id="@+id/pnl_individual"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:background="#F0F4F8">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#444"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="APPLICATION NO"/>
                        <TextView
                            android:id="@+id/lbl_app_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#777"
                            android:layout_gravity="center"
                            android:text="012345"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#BCD"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:background="#F0F4F8">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#444"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="CANDIDATE NAME"/>
                        <TextView
                            android:id="@+id/lbl_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#777"
                            android:layout_gravity="center"
                            android:text="Student Name"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#BCD"/>
                <LinearLayout
                    android:id="@+id/pnl_params"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pnl_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL : "
                        android:textStyle="bold"
                        android:textColor="#223344"
                        android:textSize="26sp"/>
                    <TextView
                        android:id="@+id/lbl_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textStyle="bold"
                        android:textColor="#223344"
                        android:textSize="28sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pnl_edu_bg_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:background="@drawable/dr_sub_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="EDUCATIONAL BACKGROUND"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#234"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"/>

                    <!-- Mark Percentage -->
                    <LinearLayout
                        android:id="@+id/pnl_mark_panel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#BCD"/>
                        <TextView
                            android:drawableLeft="@drawable/img_bullet"
                            android:drawablePadding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Percentage of Marks (%)"
                            android:textColor="#555"
                            android:textSize="15sp"
                            android:layout_margin="5dp"
                            android:padding="5dp"/>
                        <LinearLayout
                            android:id="@+id/pnl_marks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="70dp"
                            android:padding="5dp">
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Educational Background -->
                    <LinearLayout
                        android:id="@+id/pnl_edu_backgrounds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#BCD"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">
                            <TextView
                                android:drawableLeft="@drawable/img_bullet"
                                android:drawablePadding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Educational Background"
                                android:textColor="#555"
                                android:textSize="15sp"
                                android:layout_margin="5dp"
                                android:paddingTop="5dp"/>
                            <RadioGroup
                                android:id="@+id/pnl_edu_backgrounds_grp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="70dp">
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- Commerce Background -->
                        <LinearLayout
                            android:id="@+id/pnl_commerce_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="#BCD"/>
                            <RelativeLayout
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginRight="30dp">
                                <TextView
                                    android:drawableLeft="@drawable/img_bullet"
                                    android:drawablePadding="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Commerce Background"
                                    android:textColor="#555"
                                    android:textSize="15sp"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="5dp"
                                    android:layout_alignParentLeft="true"/>
                                <CheckBox
                                    android:id="@+id/chk_commerce_bg"
                                    android:button="@drawable/dr_ex_checkbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#555"
                                    android:textSize="15sp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>
                        </LinearLayout>

                        <!-- Backlog During Degree -->
                        <LinearLayout
                            android:id="@+id/pnl_degree_backlog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="#BCD"/>
                            <RelativeLayout
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginRight="30dp">
                                <TextView
                                    android:drawableLeft="@drawable/img_bullet"
                                    android:drawablePadding="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Backlog During Degree"
                                    android:textColor="#555"
                                    android:textSize="15sp"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="5dp"
                                    android:layout_alignParentLeft="true"/>
                                <CheckBox
                                    android:id="@+id/chk_degree_backlog"
                                    android:button="@drawable/dr_ex_checkbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#555"
                                    android:textSize="15sp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>
                        </LinearLayout>

                        <!-- Break in Studies UG to PG -->
                        <LinearLayout
                            android:id="@+id/pnl_breakin_ug_pg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="#BCD"/>
                            <RelativeLayout
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginRight="30dp">
                                <TextView
                                    android:drawableLeft="@drawable/img_bullet"
                                    android:drawablePadding="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Break in Studies UG to PG"
                                    android:textColor="#555"
                                    android:textSize="15sp"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="5dp"
                                    android:layout_alignParentLeft="true"/>
                                <CheckBox
                                    android:id="@+id/chk_breakin_ug_pg"
                                    android:button="@drawable/dr_ex_checkbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#555"
                                    android:textSize="15sp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>
                        </LinearLayout>

                        <!-- Break in Studies/Second Attempt during Class 10 to Class 12 -->
                        <LinearLayout
                            android:id="@+id/pnl_breakin_10_12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="#BCD"/>
                            <RelativeLayout
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginRight="30dp">
                                <TextView
                                    android:drawableLeft="@drawable/img_bullet"
                                    android:drawablePadding="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Break in Studies/Second Attempt during Class 10 to Class 12"
                                    android:textColor="#555"
                                    android:textSize="15sp"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="5dp"
                                    android:layout_alignParentLeft="true"/>
                                <CheckBox
                                    android:id="@+id/chk_breakin_10_12"
                                    android:button="@drawable/dr_ex_checkbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#555"
                                    android:textSize="15sp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>
                        </LinearLayout>

                        <!-- Reason for Break in Studies -->
                        <LinearLayout
                            android:id="@+id/pnl_break_reason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="#BCD"/>
                            <LinearLayout
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:drawableLeft="@drawable/img_bullet"
                                    android:drawablePadding="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reason for Break in Studies"
                                    android:textColor="#555"
                                    android:textSize="15sp"
                                    android:layout_margin="5dp"
                                    android:paddingTop="5dp"/>

                                <EditText
                                    android:id="@+id/txt_break_reason"
                                    android:background="@drawable/dr_edittext"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="left|center_vertical"
                                    android:layout_margin="5dp"
                                    android:textColor="#000"
                                    android:textSize="15sp"
                                    android:padding="10dp"
                                    android:inputType="textCapSentences"
                                    android:maxLength="250"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pnl_specialization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#BCD"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">
                            <TextView
                                android:drawableLeft="@drawable/img_bullet"
                                android:drawablePadding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Specialization Preferred"
                                android:textColor="#555"
                                android:textSize="15sp"
                                android:layout_margin="5dp"
                                android:paddingTop="5dp"/>
                            <RadioGroup
                                android:id="@+id/pnl_specialization_grp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="70dp">
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pnl_wrk_exp_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:background="@drawable/dr_sub_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="WORK EXPERIENCE DETAILS"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#234"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"/>

                    <!-- Work Experience -->
                    <LinearLayout
                        android:id="@+id/pnl_work_exp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#BCD"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp">
                                <TextView
                                    android:drawableLeft="@drawable/img_bullet"
                                    android:drawablePadding="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Work Experience"
                                    android:textColor="#555"
                                    android:textSize="15sp"
                                    android:layout_margin="5dp"/>
                                <TextView
                                    android:id="@+id/txt_work_exp"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textStyle="bold"
                                    android:textColor="#112233"
                                    android:textSize="24sp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginRight="10dp"/>
                            </RelativeLayout>
                            <utils.ExSeekBar
                                android:id="@+id/sb_work_exp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:max="10"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Managerial Position -->
                    <LinearLayout
                        android:id="@+id/pnl_mng_pos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#BCD"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp">
                                <TextView
                                    android:drawableLeft="@drawable/img_bullet"
                                    android:drawablePadding="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Managerial Position"
                                    android:textColor="#555"
                                    android:textSize="15sp"
                                    android:layout_margin="5dp"/>
                                <TextView
                                    android:id="@+id/txt_mng_pos"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textStyle="bold"
                                    android:textColor="#112233"
                                    android:textSize="24sp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginRight="10dp"/>
                            </RelativeLayout>
                            <utils.ExSeekBar
                                android:id="@+id/sb_mng_pos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:max="10"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pnl_designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#BCD"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">
                            <TextView
                                android:drawableLeft="@drawable/img_bullet"
                                android:drawablePadding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Present Designation"
                                android:textColor="#555"
                                android:textSize="15sp"
                                android:layout_margin="5dp"
                                android:paddingTop="5dp"/>

                            <EditText
                                android:id="@+id/txt_designation"
                                android:background="@drawable/dr_edittext"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="left|center_vertical"
                                android:layout_margin="5dp"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:padding="10dp"
                                android:maxLength="100"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pnl_comment_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:background="@drawable/dr_sub_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="OTHER COMMENTS"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#234"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:id="@+id/pnl_grooming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#BCD"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">
                            <TextView
                                android:drawableLeft="@drawable/img_bullet"
                                android:drawablePadding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grooming"
                                android:textColor="#555"
                                android:textSize="15sp"
                                android:layout_margin="5dp"
                                android:paddingTop="5dp"/>
                            <RadioGroup
                                android:id="@+id/pnl_grooming_grp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="70dp">
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pnl_dress_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#BCD"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">
                            <TextView
                                android:drawableLeft="@drawable/img_bullet"
                                android:drawablePadding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dress Code"
                                android:textColor="#555"
                                android:textSize="15sp"
                                android:layout_margin="5dp"
                                android:paddingTop="5dp"/>
                            <RadioGroup
                                android:id="@+id/pnl_dress_code_grp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="70dp">
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pnl_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#BCD"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">
                            <TextView
                                android:drawableLeft="@drawable/img_bullet"
                                android:drawablePadding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Panelist Comments"
                                android:textColor="#555"
                                android:textSize="15sp"
                                android:layout_margin="5dp"
                                android:paddingTop="5dp"/>
                            <Spinner
                                android:id="@+id/sp_comments"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="left|center_vertical"
                                android:background="@drawable/dr_edittext"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:layout_margin="5dp">
                            </Spinner>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pnl_extra_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#BCD"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">
                            <TextView
                                android:drawableLeft="@drawable/img_bullet"
                                android:drawablePadding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Additional Comments"
                                android:textColor="#555"
                                android:textSize="15sp"
                                android:layout_margin="5dp"
                                android:paddingTop="5dp"/>

                            <EditText
                                android:id="@+id/txt_extra_comments"
                                android:background="@drawable/dr_edittext"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="left|center_vertical"
                                android:layout_margin="5dp"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:padding="10dp"
                                android:maxLength="1000"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="SUBMIT"
                    android:textColor="#EEE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:background="@drawable/dr_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/pnl_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dr_overlay">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:drawable/dialog_holo_light_frame">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E0E5E9"
                android:padding="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Please Select Score Card"
                    android:textColor="#444"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="15dp"
                    android:paddingBottom="25dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#C0C9CF"
                    android:padding="1px">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#FFFFFF">
                        <ListView
                            android:id="@+id/lvw_popup_items"
                            android:background="#FFFFFF"
                            android:layout_width="500dp"
                            android:layout_height="wrap_content"
                            android:dividerHeight="0px"
                            android:divider="#00000000">
                        </ListView>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  CLOSE  "
                android:padding="10px"
                android:layout_marginTop="25dp"
                android:background="#10FF0000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#AA0000"
                android:id="@+id/btn_exit_scorecardlist"
                android:layout_marginLeft="490dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_profile"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"/>
</RelativeLayout>
